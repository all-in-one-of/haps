    multiparm 
    {
	name	ogl_uvlayers
	label	"UV Layers"
	parmtag	{ spare_category	"OpenGL" }

     	parm {
	    name	"ogl_uvlayer#_triplanar"
	    label	"Use Triplanar Projection"
	    type	toggle
	    default	{ 0 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
    	}
        parm {
	    name	"ogl_uvlayer#_scale"
	    label	"UV Scale"
	    type	vector
	    size	2
	    default	{ 1 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar != 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_trans"
	    label	"UV Translate"
	    type	vector
	    size	2
	    default	{ 0 0 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar != 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_rot"
	    label	"UV Rotate"
	    type	float
	    size	1
	    default	{ 0 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar != 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_tp_scale"
	    label	"Triplanar UV Scale"
	    type	float
	    size	1
	    default	{ 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar == 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_tp_sharp"
	    label	"Triplanar Sharpness"
	    type	float
	    size	1
	    default	{ 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar == 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_tp_blend"
	    label	"Triplanar Blend"
	    type	vector
	    size	3
	    default	{ 1 1 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar == 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_tp_offset"
	    label	"Triplanar Offset"
	    type	vector
	    size	3
	    default	{ 0 0 0 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	    disablewhen "{ ogl_uvlayer#_triplanar == 0 }"
	}
        parm {
	    name	"ogl_uvlayer#_use_tex_tint"
