	parmtag	{ spare_category	"OpenGL" }
	default { "" }
	parmtag	{ cook_dependent	"1" }
    }

    collection {
        name   ogl_reflection
        label  "Reflect"
        parmtag { spare_category "OpenGL" }

        parm {
  	    name	ogl_reflect
	    label	"Reflect"
	    type	float
	    default	{ 0.0 }
	    range	{ 0 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
        }
        parm {
  	    name	ogl_use_reflect_map
	    label	"Use Reflect Map"
	    type	toggle
	    default	{ 1 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
        }
        parm {
  	    name	ogl_reflect_map
	    label	"Reflect Map"
	    type	image
	    parmtag	{ filechooser_mode	"read" }
	    default	{ "" }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
        }
        parm {
  	    name	ogl_reflect_map_ior
	    label	"Reflect Multiplies IOR"
	    type	toggle
	    default	{ 0 }
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
        }
	parm {
            name	ogl_reflect_map_comp
	    label	"Reflect Map Channel"
	    type	integer
	    default 	{ 0 }
	    menu {
	    	0	"Luminance"
	        1	"Red"
		2	"Green"
		3 	"Blue"
		4	"Alpha"
            }
	    range 	{ 0 4 }
	    disablewhen "{ ogl_reflect_map == \"\" }"
	    parmtag	{ cook_dependent	"1" }
	    parmtag	{ spare_category	"OpenGL" }
	}
    }

    collection {
        name   ogl_coat
